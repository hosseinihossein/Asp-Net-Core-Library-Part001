@model NavBarModel
@{
    string currentUrl = $"{Context.Request.Path}{Context.Request.QueryString}";
}

<!------------------------------------------------------------------------->
<style>
    #navbar46cc363e10734e128914f708e641cde9 {
        list-style-type: none;
        margin: 0;
        padding: 0;
        /*overflow: hidden;*/
        background-color: #333;
        position: relative;
        z-index: 10;
    }

    #navbar46cc363e10734e128914f708e641cde9 li {
        float: left;
    }

    #navbar46cc363e10734e128914f708e641cde9 li a,
    #navbar46cc363e10734e128914f708e641cde9 .dropbtn {
        display: inline-block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        cursor: pointer;
    }

    #navbar46cc363e10734e128914f708e641cde9 li a:hover,
    #navbar46cc363e10734e128914f708e641cde9 .dropdown:hover .dropbtn {
        background-color: red;
    }

    #navbar46cc363e10734e128914f708e641cde9 li.dropdown {
        display: inline-block;
        position: relative;
    }

    #navbar46cc363e10734e128914f708e641cde9 .dropdown-content {
        display: none;
        position: absolute;
        right: 0;
        top: 46px;
        background-color: #f9f9f9;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1;
    }

    #navbar46cc363e10734e128914f708e641cde9 .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
        text-align: left;
    }

    #navbar46cc363e10734e128914f708e641cde9 .dropdown-content a:hover {
        background-color: #f1f1f1;
    }

    #navbar46cc363e10734e128914f708e641cde9 .dropdown:hover .dropdown-content {
        display: block;
    }
</style>
<ul id="navbar46cc363e10734e128914f708e641cde9" class="clearfix">
    <li><a asp-action="Index" asp-controller="Home"><i class="fa-solid fa-house"></i> Home</a></li>
    <div style="float: right;">
        @if (User.Identity is not null && User.Identity.IsAuthenticated)
        {
            <li class="dropdown">
                <a class="dropbtn" style="position: relative;">
                    <i class="fa-solid fa-user"></i> @User.Identity.Name
                </a>
                <div class="dropdown-content">
                    <a asp-action="Dashboard" asp-controller="Identity">
                        <i class="fa-solid fa-chalkboard-user"></i> Dashboard
                    </a>
                    <a asp-action="Logout" asp-controller="Identity">
                        <i class="fa-solid fa-right-from-bracket"></i> Logout
                    </a>
                </div>
            </li>
        }
        else
        {
            <li>
                <a asp-action="Login" asp-controller="Identity">
                    <i class="fa-solid fa-right-to-bracket"></i> Login
                </a>
            </li>
            <li>
                <a asp-action="Signup" asp-controller="Identity">
                    <i class="fa-solid fa-user-plus"></i> SignUp
                </a>
            </li>
        }

    </div>
</ul>
<!------------------------------------------------------------------------->
